name:          comonad-extras
category:      Control, Comonads
version:       2.0.2
license:       BSD3
cabal-version: >= 1.6
license-file:  LICENSE
author:        Edward A. Kmett
maintainer:    Edward A. Kmett <ekmett@gmail.com>
stability:     experimental
homepage:      http://github.com/ekmett/comonad-extras/
copyright:     Copyright (C) 2011 Edward A. Kmett
synopsis:      Comonad transformers requiring extensions to Haskell 98
description:   Comonads and comonad transformers that require extensions to Haskell 98
build-type:    Simple

source-repository head
  type: git
  location: git://github.com/ekmett/comonad-extras.git

flag DeriveDataTypeable
  manual: False
  default: True

library
  extensions: CPP

  other-extensions:
    FlexibleInstances
    MultiParamTypeClasses
    FunctionalDependencies
    UndecidableInstances
    Rank2Types
    MultiParamTypeClasses

  build-depends: 
    array                >= 0.3.0.2 && < 0.4,
    base                 >= 4       && < 5,
    containers           >= 0.4     && < 0.5,
    comonad              >= 1.1.1.1 && < 1.2,
    comonad-transformers >= 2.0.2   && < 2.1,
    comonads-fd          >= 2.0.2   && < 2.1,
    distributive         >= 0.2     && < 0.3,
    semigroupoids        >= 1.2.6   && < 1.3,
    transformers         >= 0.2.0   && < 0.3

  if flag(DeriveDataTypeable)
    extensions: DeriveDataTypeable
    cpp-options: -DLANGUAGE_DeriveDataTypeable

  exposed-modules:
    Control.Comonad.Store.Zipper
    Control.Comonad.Store.Pointer

  ghc-options:      -Wall 
